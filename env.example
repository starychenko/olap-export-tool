# Параметри підключення до OLAP
# Вкажіть IP-адресу або хост OLAP сервера
OLAP_SERVER=server_address

# Вкажіть назву бази даних OLAP
OLAP_DATABASE=database_name

# Параметри автентифікації OLAP
# Метод автентифікації: SSPI (Windows-автентифікація) або LOGIN (автентифікація за логіном/паролем)
# SSPI - використовує ADOMD.NET з Windows-автентифікацією
# LOGIN - використовує OleDbConnection з System.Data.OleDb для автентифікації за логіном/паролем
OLAP_AUTH_METHOD=SSPI

# Параметри ручної автентифікації
# Домен для формування повного логіну (наприклад, EPICENTRK\username)
OLAP_DOMAIN=EPICENTRK
# Шифрування збережених облікових даних (true/false)
OLAP_CREDENTIALS_ENCRYPTED=true
# Шлях до файлу зі збереженими обліковими даними (відносно кореневої папки проекту)
OLAP_CREDENTIALS_FILE=.credentials

# Параметри запиту
# Вкажіть назву департаменту для фільтрації (Споживча електроніка)
FILTER_FG1_NAME=department_name

# Періоди запитів (у форматі РРРР-ТТ, де РРРР - рік, ТТ - номер тижня)
# Початковий період для вибірки (наприклад, 2025-01)
YEAR_WEEK_START=2025-01

# Кінцевий період для вибірки (наприклад, 2025-01)
YEAR_WEEK_END=2025-01

# Затримка між запитами в секундах (для зменшення навантаження на сервер)
QUERY_TIMEOUT=15

# Вивід діагностичної інформації (true/false)
DEBUG=false

# Шлях до бібліотеки ADOMD.NET
# Для SSMS 20 типовий шлях:
ADOMD_DLL_PATH=./lib

# Налаштування форматування Excel
# Колір фону заголовків (HEX без #)
EXCEL_HEADER_COLOR=00365E

# Колір шрифту заголовків (HEX без #)
EXCEL_HEADER_FONT_COLOR=FFFFFF

# Розмір шрифту заголовків
EXCEL_HEADER_FONT_SIZE=11 

# Налаштування формату експорту
# Формат експорту (XLSX, CSV або BOTH для збереження в обох форматах)
EXPORT_FORMAT=XLSX

# Налаштування для CSV файлів
# Роздільник для CSV файлів (кома, крапка з комою, табуляція)
CSV_DELIMITER=;

# Кодування для CSV файлів
CSV_ENCODING=utf-8-sig

# Налаштування цитування: 'all', 'minimal', 'nonnumeric'
# 'minimal' - лапки тільки коли необхідно (найменший розмір файлу)
# 'nonnumeric' - лапки тільки для текстових значень
# 'all' - лапки для всіх значень (найбільший розмір файлу)
CSV_QUOTING=all