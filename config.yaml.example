# ============================================================
# OLAP Export Tool - Конфігурація
# ============================================================
# Цей файл містить ВСІ не-секретні налаштування.
# Секрети (сервер, БД, автентифікація) залишаються у .env
#
# Пріоритет: defaults -> config.yaml -> .env (legacy) -> profile.yaml -> CLI args
# ============================================================

# --- Параметри запиту ---
query:
  # Фільтр по категорії товарів (null = без фільтру)
  filter_fg1_name: null
  # Діапазон періодів у форматі YYYY-WW (null = визначається автоматично або через CLI)
  year_week_start: null
  year_week_end: null
  # Затримка між запитами в секундах
  timeout: 30

# --- Параметри експорту ---
export:
  # Формат: xlsx, csv або both
  format: xlsx
  # Форсувати тільки CSV (ігнорує xlsx навіть якщо вказано)
  force_csv_only: false
  # Стиснення: zip або none
  compress: none

# --- Налаштування XLSX ---
xlsx:
  # Потоковий запис (менший пік пам'яті для великих даних)
  streaming: false
  # Мінімальне форматування (без автоширини, freeze panes)
  min_format: false

# --- Налаштування CSV ---
csv:
  # Роздільник полів
  delimiter: ";"
  # Кодування файлу
  encoding: "utf-8-sig"
  # Режим цитування: minimal, all, nonnumeric
  quoting: "minimal"

# --- Форматування заголовків Excel ---
excel_header:
  # Колір фону (HEX без #)
  color: "00365E"
  # Колір шрифту (HEX без #)
  font_color: "FFFFFF"
  # Розмір шрифту
  font_size: 11

# --- Шляхи ---
paths:
  # Шлях до бібліотеки ADOMD.NET
  adomd_dll: "./lib"
  # Директорія для результатів
  result_dir: "result"

# --- Відображення ---
display:
  # ASCII-режим для логів (без emoji)
  ascii_logs: false
  # Режим налагодження
  debug: false
  # Інтервал оновлення прогресу (мс), діапазон 50-500
  progress_update_interval_ms: 100
